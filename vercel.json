{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**"]
      }
    },
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "stok/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/web/(.*)",
      "dest": "/web/$1"
    },
    {
      "src": "/stok/(.*)",
      "dest": "/stok/$1"
    },
    {
      "src": "/web",
      "dest": "/web/index.html"
    },
    {
      "src": "/stok", 
      "dest": "/stok/index.html"
    },
    {
      "src": "/",
      "dest": "/web/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}