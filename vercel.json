{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "!server/node_modules/**"]
      }
    },
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "stok/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With"
      }
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/server/index.js"
    },

    {
      "src": "/web/(.*)",
      "dest": "/web/dist/$1"
    },
    {
      "src": "/web",
      "dest": "/web/dist/index.html"
    },

    {
      "src": "/stok/(.*)",
      "dest": "/stok/dist/$1"
    },
    {
      "src": "/stok",
      "dest": "/stok/dist/index.html"
    },

    {
      "src": "/",
      "dest": "/web/dist/index.html"
    },

    {
      "src": "/(.*)",
      "dest": "/web/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
